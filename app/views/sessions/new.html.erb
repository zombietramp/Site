<% provide(:title,'Sign in') %>
<h1>登录</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session,url:sessions_path) do |f| %>
			
			
			<%= f.label :"帐号:" %>  <%= f.text_field :email ,placeholder: "请输入邮箱..."%>
			
			<%= f.label :password , "密码:" %>  <%= f.password_field :password %>
			
			<%= f.submit  "登录",class:"btn btn-large btn-primary" %>  
			
			
		<% end %>
		
		<p>没有用户 ？ <%= link_to "立即注册", signup_path %> </p>
	</div>
</div>
